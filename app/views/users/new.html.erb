<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="form">
  <%= simple_form_for @user do |f| %>
    <%= f.error_notification %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.button :submit, "Create my account" %>
  <% end %>
</div>
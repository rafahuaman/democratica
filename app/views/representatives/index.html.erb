<h1>Listing congress members</h1>

<table>
  <thead>
    <tr>
      <th>Prefix</th>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Suffix</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip4</th>
      <th>District</th>
      <th>Party</th>
      <th>Twitter handle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @congress_members.each do |member| %>
      <tr>
        <td><%= member.prefix %></td>
        <td><%= member.first_name %></td>
        <td><%= member.middle_name %></td>
        <td><%= member.last_name %></td>
        <td><%= member.suffix %></td>
        <td><%= member.address %></td>
        <td><%= member.city %></td>
        <td><%= member.state %></td>
        <td><%= member.zip4 %></td>
        <td><%= member.district %></td>
        <td><%= member.party %></td>
        <td><%= member.twitter_handle %></td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_congress_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

